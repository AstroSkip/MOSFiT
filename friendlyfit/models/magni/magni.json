{
    "transient":{
        "kind":"data",
        "keys":{
            "photometry":{
                "time":["required", "numeric"],
                "magnitude":["required", "numeric"],
                "e_magnitude":["required", "numeric"],
                "band":"required",
                "instrument":"optional",
                "system":"optional",
                "upperlimit":"exclude",
                "includeshost":"exclude",
                "host":"exclude",
                "kcorrected":"exclude",
                "scorrected":"exclude"
            },
            "lumdist":{
                "value":"required"
            },
            "redshift":{
                "value":"required"
            }
        }
    },
    "fnickel":{
        "kind":"parameter",
        "value":1.0,
        "class":"parameter",
        "latex":"$f_{\\rm Ni}$"
    },
    "texplosion":{
        "kind":"parameter",
        "value":0.0,
        "class":"parameter",
        "latex":"$t_{\\rm exp}$"
    },
    "temperature":{
        "kind":"parameter",
        "value":1.0e4,
        "class":"parameter",
        "latex":"$T_{\\min}$"
    },
    "Pspin":{
        "kind":"parameter",
        "value":2.0,
        "class":"parameter",
        "latex":"$P_{\\rm spin}$"
    },
    "Bfield":{
        "kind":"parameter",
        "value":1.0,
        "class":"parameter",
        "latex":"$B$"
    },
    "Mns":{
        "kind":"parameter",
        "value":2.0,
        "class":"parameter",
        "latex":"$M_{\\rm NS}$~($M_\\odot)$"
    },
    "thetaPB":{
        "kind":"parameter",
        "value":0.785398163,
        "class":"parameter",
        "latex":"$\\theta_{\\rm PB}$"
    },
    "kappa":{
        "kind":"parameter",
        "value":0.2,
        "class":"parameter",
        "latex":"$\\Kappa$"
    },
    "kappagamma":{
        "kind":"parameter",
        "value":10.0,
        "class":"parameter",
        "latex":"$\\Kappa_\\gamma$"
    },
    "mejecta":{
        "kind":"parameter",
        "value":1.0,
        "class":"parameter",
        "latex":"$M_{\\rm ej}$~($M_\\odot$)"
    },
    "vejecta":{
        "kind":"parameter",
        "value":1.0e4,
        "class":"parameter",
        "latex":"$v_{\\rm ej}$~(km~s$^{-1}$)"
    },
    "variance":{
        "kind":"parameter",
        "class":"parameter",
        "latex":"$\\sigma$"
    },
    "densetimes":{
        "kind":"array",
        "inputs":[
            "transient",
            "texplosion"
        ]
    },
    "nickelcobalt":{
        "kind":"engine",
        "inputs":[
            "densetimes",
            "mejecta",
            "fnickel",
            "texplosion"
        ]
    },
    "magnetar":{
        "kind":"engine",
        "inputs":[
            "transient",
            "mejecta",
            "Pspin",
            "Bfield",
            "Mns",
            "thetaPB",
            "texplosion",
            "nickelcobalt"
        ]
    },
    "diffusion":{
        "kind":"transform",
        "inputs":[
            "magnetar",
            "kappa",
            "kappagamma",
            "mejecta",
            "texplosion",
            "vejecta"
        ]
    },
    "envelopecore":{
        "kind":"sed",
        "inputs":[
            "diffusion",
            "temperature"
        ]
    },
    "filters":{
        "kind":"observable",
        "inputs":[
            "envelopecore"
        ],
        "requests":[
            ["band_wave_ranges", "filters"]
        ]
    },
    "likelihood":{
        "kind":"objective",
        "inputs":[
            "transient",
            "variance",
            "filters"
        ]
    },
    "fitlc":{
        "kind":"output",
        "inputs":[
            "likelihood",
            "transient",
            "filters"
        ],
        "class":"lightcurve"
    }
}
