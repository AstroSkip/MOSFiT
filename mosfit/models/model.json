{
    "transient":{
        "kind":"data",
        "keys":{
            "photometry":{
                "time":["required", "numeric"],
                "magnitude":["required", "numeric"],
                "e_magnitude":["optional", "numeric"],
                "e_upper_magnitude":["optional", "numeric"],
                "e_lower_magnitude":["optional", "numeric"],
                "band":"required",
                "instrument":"optional",
                "system":"optional",
                "upperlimit":"optional",
                "includeshost":"exclude",
                "host":"exclude",
                "kcorrected":"exclude",
                "scorrected":"exclude"
            },
            "ebv":{
                "value":"required"
            },
            "lumdist":{
                "value":"required"
            },
            "redshift":{
                "value":"required"
            }
        }
    },
    "default_upper_limit_error":{
        "kind":"parameter",
        "value":0.1,
        "class":"constant"
    },
    "default_no_error_bar_error":{
        "kind":"parameter",
        "value":1.0,
        "class":"constant"
    },
    "lumdist":{
        "kind":"parameter",
        "value":1.0e-5,
        "class":"parameter",
        "inputs":[
            "transient"
        ],
        "latex":"d_{L}"
    },
    "redshift":{
        "kind":"parameter",
        "value":0.0,
        "class":"parameter",
        "inputs":[
            "transient"
        ],
        "latex":"z"
    },
    "variance":{
        "kind":"parameter",
        "value":1.0,
        "class":"parameter",
        "latex":"\\sigma"
    },
    "likelihood":{
        "kind":"objective",
        "inputs":[
            "transient",
            "variance",
            "filters",
            "default_upper_limit_error",
            "default_no_error_bar_error"
        ]
    },
    "fitlc":{
        "kind":"output",
        "inputs":[
            "likelihood",
            "transient",
            "filters"
        ],
        "class":"lightcurve"
    }
}
